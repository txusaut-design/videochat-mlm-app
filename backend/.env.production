# Production Environment Variables for Render

# Database - Render PostgreSQL (will be automatically set by Render)
DATABASE_URL="postgresql://username:password@host:port/database"

# JWT Configuration
JWT_SECRET="your-super-secure-jwt-secret-for-production-change-this"
JWT_EXPIRES_IN="7d"

# Server Configuration
PORT=5000
NODE_ENV="production"

# CORS Configuration
FRONTEND_URL="https://your-netlify-domain.netlify.app"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # limit each IP to 100 requests per windowMs

# MLM Settings - 5 LEVEL SYSTEM
MLM_LEVEL_1_COMMISSION=3.5   # $3.5 USD for level 1 (direct referral)
MLM_LEVEL_2_5_COMMISSION=1   # $1 USD for levels 2-5
MLM_MAX_LEVELS=5             # 5 levels deep
MEMBERSHIP_DURATION_DAYS=28  # 28 days membership
MEMBERSHIP_PRICE_USD=10      # $10 USD membership price
