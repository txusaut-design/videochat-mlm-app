# Database
DATABASE_URL="postgresql://username:password@localhost:5432/videochat_mlm_db?schema=public"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Server
PORT=5000
NODE_ENV="development"

# CORS
FRONTEND_URL="http://localhost:3000"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # limit each IP to 100 requests per windowMs

# MLM Settings
MLM_COMMISSION_AMOUNT=1      # $1 USD per level
MLM_MAX_LEVELS=6             # 6 levels deep
MEMBERSHIP_DURATION_DAYS=28  # 28 days membership
MEMBERSHIP_PRICE_USD=10      # $10 USD membership price
